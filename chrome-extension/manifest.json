{
  "manifest_version": 3,
  "name": "PhisGuard Security Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for phishing detection and security analysis using PhisGuard backend.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhisGuard Security"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}